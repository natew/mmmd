{
  "name": "md",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run index.ts",
    "video": "bun run video.ts",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint --import-plugin --type-aware",
    "lint:fix": "oxfmt && oxlint --import-plugin --type-aware --fix --fix-suggestions",
    "typecheck": "bunx tsc --noEmit",
    "check": "bun run lint && bun run typecheck",
    "build": "bun run typecheck",
    "test": "bun test"
  },
  "bin": {
    "md": "./index.ts",
    "md-video": "./video.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "oxlint-tsgolint": "^0.11.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "ansi-to-json": "^2.0.1",
    "canvas": "^3.2.1",
    "chalk": "^5.6.2",
    "marked": "^17.0.2",
    "marked-terminal": "^7.3.0"
  }
}
